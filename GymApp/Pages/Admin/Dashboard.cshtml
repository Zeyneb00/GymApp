@page
@model GymApp.Pages.Admin.DashboardModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card shadow-sm p-3 text-center">
            <h4>@Model.TotalMembers</h4>
            <p class="text-muted">Members</p>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm p-3 text-center">
            <h4>@Model.TotalCategories</h4>
            <p class="text-muted">Categories</p>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm p-3 text-center">
            <h4>@Model.TotalLessons</h4>
            <p class="text-muted">Lessons</p>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm p-3 text-center">
            <h4>@Model.TotalRegistrations</h4>
            <p class="text-muted">Registrations</p>
        </div>
    </div>
</div>

<hr class="my-4" />

<h4>Quick Actions</h4>

<div class="list-group">
    <a class="list-group-item list-group-item-action" asp-page="/Admin/Categories/Index">
        Manage Categories
    </a>
    <a class="list-group-item list-group-item-action" asp-page="/Lessons/Index">
        Manage Lessons
    </a>
</div>
