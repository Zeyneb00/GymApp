@page "{id:int}"
@model GymApp.Pages.Admin.Members.DetailsModel

<h2>Member Details</h2>

@if (Model.Member == null)
{
    <p class="text-danger">Member not found.</p>
}
else
{
    <div class="card p-3">

        <h4>@Model.Member.FirstName @Model.Member.LastName</h4>

        <p><strong>T.C.:</strong> @Model.Member.TcNumber</p>
        <p><strong>Package:</strong> @Model.Member.MembershipPackage</p>
        <p><strong>Membership Ends:</strong> @Model.Member.MembershipEndDate.ToShortDateString()</p>

        <h5 class="mt-3">Registered Lessons</h5>

        @if (Model.Member.Registrations == null || !Model.Member.Registrations.Any())
        {
            <p>No lessons registered.</p>
        }
        else
        {
            <ul>
                @foreach (var r in Model.Member.Registrations)
                {
                    <li>
                        @r.GroupLesson.Name
                        (@r.GroupLesson.DayOfWeek @r.GroupLesson.Time)
                    </li>
                }
            </ul>
        }
    </div>

    <a class="btn btn-secondary mt-3"
       asp-page="/Admin/Members/Index">
        Back
    </a>
}
