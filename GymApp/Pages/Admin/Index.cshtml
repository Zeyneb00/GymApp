@page
@model GymApp.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row">

    <!-- Categories Card -->
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm border-primary">
            <div class="card-body text-center">
                <h4 class="card-title">Lesson Categories</h4>
                <p class="text-muted">@Model.CategoryCount categories</p>
                <a asp-page="/Admin/Categories/Index" class="btn btn-primary w-100">
                    Manage Categories
                </a>
            </div>
        </div>
    </div>

    <!-- Lessons Card -->
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm border-success">
            <div class="card-body text-center">
                <h4 class="card-title">Group Lessons</h4>
                <p class="text-muted">@Model.LessonCount lessons</p>
                <a asp-page="/Admin/Lessons/Index" class="btn btn-success w-100">
                    Manage Lessons
                </a>
            </div>
        </div>
    </div>

    <!-- Members Card -->
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm border-warning">
            <div class="card-body text-center">
                <h4 class="card-title">Members</h4>
                <p class="text-muted">@Model.MemberCount members</p>
                <a asp-page="/Admin/Members/Index" class="btn btn-warning w-100">
                    View Members
                </a>
            </div>
        </div>
    </div>

</div>
