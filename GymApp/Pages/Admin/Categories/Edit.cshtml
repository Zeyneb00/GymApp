@page "{id:int}"
@model GymApp.Pages.Admin.Categories.EditModel

<h2>Edit Category</h2>

<form method="post">
    <input type="hidden" asp-for="Category.Id" />

    <div class="form-group">
        <label>Name</label>
        <input asp-for="Category.Name" class="form-control" />
        <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Category.Description" class="form-control"></textarea>
        <span asp-validation-for="Category.Description" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
