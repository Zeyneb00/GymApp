@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">

    <div class="text-center p-5 bg-light shadow rounded">
        <h1 class="display-4 fw-bold">🏋️‍♂️ Gym Membership & Lesson System</h1>
        <p class="lead mt-3">
            Track your membership, explore group lessons, and register instantly.
        </p>

        <a asp-page="/Login" class="btn btn-primary btn-lg mt-4 px-5">
            Login to Your Account
        </a>
    </div>

    <div class="row mt-5 text-center">
        <div class="col-md-4">
            <h4>💳 Membership Tracking</h4>
            <p>View your package, end date, and membership details.</p>
        </div>

        <div class="col-md-4">
            <h4>📅 Group Lessons</h4>
            <p>Explore lessons by category and check available spots.</p>
        </div>

        <div class="col-md-4">
            <h4>📝 Quick Registration</h4>
            <p>Easily register for lessons in just one click.</p>
        </div>
    </div>
</div>
